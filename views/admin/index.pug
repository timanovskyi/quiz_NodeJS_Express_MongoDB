extends ../layout

block content
  h1= title

  nav 
    ul  
      li
        a(href='/admin/news/add') add

  if (data)
    table
      tr
        th id
        th title
        th date
        th del
      each item, index in data
        tr
          td=index  
          td=item.title
          td=item.created
          td
            a(href=`/admin/news/delete/${item._id}`) Usun
